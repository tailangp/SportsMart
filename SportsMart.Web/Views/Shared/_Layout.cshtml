<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="~/Content/dist/app.css" />
    <script src="~/Content/dist/js-lib.js" type="text/javascript"></script>
    <script src="~/Content/dist/app.js" type="text/javascript"></script>
</head>
<body ng-app="app">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <ul class="nav navbar-nav">
                    <li>Sports Mart</li>
                </ul>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="#!/" class="glyphicon glyphicon-home"></a></li>
                    <li><a href="#!/about" class="glyphicon glyphicon-comment"></a></li>
                    <li><a href="#!/contact" class="glyphicon glyphicon-plane"></a></li>
                    <li><a href="#!/product" class="glyphicon glyphicon-bell"></a></li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        @RenderSection("SPAViews", required: false)
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Sports Mart</p>
        </footer>
    </div>
    @*@Scripts.Render("~/Content/dist/app.js")*@
    @RenderSection("Scripts", required: false)
</body>
</html>
